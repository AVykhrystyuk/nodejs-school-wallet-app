    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently --kill-others 'npm run build-server' 'npm run build-client'",
    "build-server": "NODE_PATH=. nodemon --watch source ./source/server/server.js",
    "build-server:prod": "NODE_PATH=. node ./source/server/server.js",
